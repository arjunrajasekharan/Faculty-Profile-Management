<%- include("../partials/header.ejs")%>
<section id="header" class="jumbotron text-center">
    <h1 class="display-3"  style="font-size:5vw;">Our Faculty</h1>
    <p class="lead text-custom">List of all faculty profiles:

    </p>
    <a href="/publications" class="btn btn-custom">View All Publications</a>
  </section>

<div class="container text-center" style="margin-bottom: 30px;">  <a href="/register" class="btn btn-outline-success">+ Add New Profile</a> </div>


	
	<div class="container">
	
        
            <div class="row align-item-center justify-content-start">
<% faculties.forEach(function(faculty){%>

                <div class="col-12 col-sm-6 col-md-4 col-xl-3">
                    <div class="card">
                        <img src="<%=faculty.image%>" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"><%=faculty.name%></h5>
                            <p class="card-text"><%=faculty.designation%></p>
                            <a href="/faculties/<%=faculty._id%>" class="btn btn-outline-primary btn-sm">View
                                Profile</a>
                        </div>
                    </div>
                </div>
				<%})%>
            </div>
        
    
	</div>

<style>
.card-img-top {
width: 100%;
height: 40vh;
object-fit: cover;
}
</style>


<%- include("../partials/footer.ejs")%>