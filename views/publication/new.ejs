
<%- include("../partials/header.ejs")%>
<div class="row justify-content-center">
	<div class="col-lg-5 col-md-7 col-sm-10">

<form class="p-5" action="/faculties/<%=faculty._id%>/publications" method="POST">
	<div class="form-group">
	<input type="text" class="form-control" placeholder="title" name="publication[title]">
	</div>
	<div class="form-group">
	<input type="number" class="form-control" placeholder="publication id" name="publication[id]">
	</div>
	<div class="form-group">
	<input type="text" class="form-control" placeholder="year of publication" name="publication[year]">
	</div>
	<div class="form-group">
		Key Publication <input type="checkbox"  name="key" value="yes">
	</div>
	
	
	
	<div class="form-group">
	<select  class="form-control " name="publication[type]">
		<option value="Journal">Journal</option>
		<option value="Conference">Conference</option>
		<option value="Article">Article</option>
		<option value="Book">Book</option>
		<option value="Chapter">Chapter</option>
		<option value="Patent">Patent</option>
		<option value="Web Page">Web Page</option>
		<option value="Newspaper">Newspaper</option>
		<option value="Other">Other</option>
	</select>
	</div>
	<!--
	<div class="form-group">
	<input type="text" class="form-control" value=type1 name="publication[type]">
	</div>-->
	<div class="form-group">		
	<input type="text" class="form-control" placeholder="content here..." name="publication[content]">
	</div>
	<button class="btn btn-block btn-success">
		Submit
	</button>
</form>
		
			</div>

</div>		
		
		
